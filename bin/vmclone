#!/bin/bash

set -e

TARGET=$1
SOURCE=$2

: "${SOURCE:=ubuntu1804}"
: "${TARGET:=vm$RANDOM}"
: "${LIBVIRT:=/var/lib/libvirt/images}"
: "${USERDIR:=/home/sysadmin}"

virt-clone                                 \
  --connect qemu:///system                 \
  --original $SOURCE                       \
  --name $TARGET                           \
  --auto-clone

sudo virt-sysprep                           \
   --connect qemu:///system                 \
   --domain  $TARGET                        \
   --hostname $TARGET

sudo virt-customize                        \
  --connect qemu:///system                 \
  --add $LIBVIRT/$TARGET.qcow2             \
  --run-command                            \
     'dpkg-reconfigure openssh-server'
