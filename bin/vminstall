#!/usr/bin/env bash

virt-install                                                                       \
  --connect qemu:///system                                                         \
  --name ubuntu1604                                                                \
  --ram 2048                                                                       \
  --disk path=/var/lib/libvirt/images/ubuntu1604.qcow2,size=20                     \
  --vcpus 1                                                                        \
  --os-type linux                                                                  \
  --os-variant generic                                                             \
  --network bridge=virbr0                                                          \
  --graphics none                                                                  \
  --console pty,target_type=serial                                                 \
  --location 'http://archive.ubuntu.com/ubuntu/dists/xenial/main/installer-amd64/' \
  --extra-args                                                                     \
     'auto=true                                                                    \
      priority=critical                                                            \
      console=ttyS0,115200n8                                                       \
      serial                                                                       \
      url=http://192.168.122.1:8080/ubuntu-preseed                                 \
      console-keymaps-at/keymap=us                                                 \
      locale=en_US                                                                 \
      hostname=ubuntu'
